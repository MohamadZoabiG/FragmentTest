<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/itemtxt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="88dp"
            android:layout_marginTop="59dp"
            android:text="Producer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/itemtxt1" />

        <TextView
            android:id="@+id/itemtxt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="17dp"
            android:text="Date"
            app:layout_constraintStart_toStartOf="@+id/itemtxt3"
            app:layout_constraintTop_toBottomOf="@+id/itemtxt3" />

        <TextView
            android:id="@+id/itemtxt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="65dp"
            android:text="Title"
            app:layout_constraintStart_toStartOf="@+id/itemtxt2"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/itemtxt2"
            android:layout_width="0dp"
            android:layout_height="21dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="40dp"
            android:text="Length"
            app:layout_constraintBottom_toBottomOf="@+id/itemtxt3"
            app:layout_constraintEnd_toEndOf="@+id/itemtxt3"
            app:layout_constraintStart_toStartOf="@+id/itemtxt3"
            app:layout_constraintTop_toTopOf="@+id/itemtxt1" />

        <TextView
            android:id="@+id/addressshow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp"
            android:layout_marginEnd="106dp"
            android:text="Adress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/producershow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:text="Mohamad"
            app:layout_constraintStart_toStartOf="@+id/lengthshow"
            app:layout_constraintTop_toBottomOf="@+id/lengthshow" />

        <TextView
            android:id="@+id/timeshow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:text="2.2.2022"
            app:layout_constraintStart_toStartOf="@+id/producershow"
            app:layout_constraintTop_toBottomOf="@+id/producershow" />

        <TextView
            android:id="@+id/lengthshow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:text="25minutes"
            app:layout_constraintStart_toStartOf="@+id/addressshow"
            app:layout_constraintTop_toBottomOf="@+id/addressshow" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>